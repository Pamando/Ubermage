<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ubermage.www.ubermage.TrainingActivity">


    <LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent">



        <RelativeLayout android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/debuggingUserInputTraining"
                android:textSize="@dimen/abc_text_size_large_material"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/debuggingUserInputTraining"
                android:id="@+id/debuggingUserInputArrayTraining"
                android:textSize="@dimen/abc_text_size_medium_material"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/debuggingUserInputArrayTraining"
                android:id="@+id/debuggingDatabaseOutputTraining"
                android:textSize="@dimen/abc_text_size_large_material"/>

        </RelativeLayout>

        <LinearLayout android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:id="@+id/userCanvasLinearLayout">

            <GridView
                android:id="@+id/userCanvas"
                android:numColumns="20"

                android:gravity="center"
                android:columnWidth="20dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

            </GridView>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
